# Пример переменных окружения для Yandex Cloud
# Скопируйте в .env и заполните своими значениями

# Основные настройки
NODE_ENV=production
PORT=8080

# База данных
DATABASE_URL=postgresql://username:password@hostname:port/database_name
# Пример для Managed PostgreSQL в Yandex Cloud:
# DATABASE_URL=postgresql://transport_user:password@c-xxxxx.rw.mdb.yandexcloud.net:6432/transport_registry

# Безопасность
SESSION_SECRET=your-very-secure-session-secret-key-minimum-32-characters

# Yandex Cloud специфичные настройки
YC_CLOUD_ID=your-cloud-id
YC_FOLDER_ID=your-folder-id
YC_ZONE=ru-central1-a

# Container Registry
REGISTRY_ID=your-registry-id
IMAGE_NAME=transport-app
CONTAINER_NAME=transport-container

# Опциональные настройки
DOMAIN_NAME=transport.yourcompany.com
SSL_CERTIFICATE_ID=your-certificate-id

# Мониторинг
HEALTH_CHECK_URL=https://your-container-url
LOG_LEVEL=info
ENABLE_MONITORING=true

# Настройки приложения
MAX_UPLOAD_SIZE=10MB
SESSION_TIMEOUT=3600000
CORS_ORIGINS=https://yourcompany.com,https://www.yourcompany.com

# Интеграция с Битрикс24 (если используется)
BITRIX_WEBHOOK_URL=https://your-bitrix24.com/webhook-handler.php
BITRIX_API_KEY=your-bitrix-api-key
BITRIX_SECRET=your-bitrix-secret

# Дополнительные сервисы
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=465
SMTP_USER=your-email@yandex.ru
SMTP_PASSWORD=your-email-password

# Резервное копирование
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7